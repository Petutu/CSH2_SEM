@model MemberFilterViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Member List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<form method="get">
    <div class="form-inline mb-3">
        <input type="text" name="searchFirstName" value="@Model.SearchFirstName" class="form-control mr-2" placeholder="First Name" />
        <input type="text" name="searchLastName" value="@Model.SearchLastName" class="form-control mr-2" placeholder="Last Name" />
        <select name="searchMembershipType" class="form-control" asp-items="ViewBag.MembershipTypes">
            <option value="">-- Select Membership Type --</option>
        </select>
        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>
<table class="table">
    <table class="table">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>MembershipType</th>
                <th>JoinDate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Members)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.MembershipType</td>
                    <td>@item.JoinDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
</table>
